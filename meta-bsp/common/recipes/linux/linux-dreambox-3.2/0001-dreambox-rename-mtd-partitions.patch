From e348387fdc1d1b918d8beb6ab3a4aa88a60fb8c6 Mon Sep 17 00:00:00 2001
From: Andreas Monzner <andreas.monzner@dream-property.net>
Date: Thu, 28 Feb 2013 12:06:29 +0100
Subject: [PATCH] dreambox: rename mtd partitions

---
 arch/mips/brcmstb/board.c        |   10 +++++-----
 drivers/mtd/nand/dreambox_nand.c |    4 ++--
 2 files changed, 7 insertions(+), 7 deletions(-)

diff --git a/arch/mips/brcmstb/board.c b/arch/mips/brcmstb/board.c
index 68b6b57..1db3038 100644
--- a/arch/mips/brcmstb/board.c
+++ b/arch/mips/brcmstb/board.c
@@ -725,8 +725,8 @@ void __init board_get_ram_size(unsigned long *dram0_mb, unsigned long *dram1_mb)
 static struct mtd_partition fixed_partition_map[] = {
 	{ .name = "complete",		.offset = 0,			.size = 64 * 1024 * 1024,	},
 	{ .name = "loader",		.offset = 0,			.size = 256 * 1024,		},
-	{ .name = "boot partition",	.offset = 256 * 1024,		.size = (4 * 1024 - 256) * 1024	},
-	{ .name = "root partition",	.offset = 4 * 1024 * 1024,	.size = 60 * 1024 * 1024,	},
+	{ .name = "boot",		.offset = 256 * 1024,		.size = (4 * 1024 - 256) * 1024	},
+	{ .name = "root",		.offset = 4 * 1024 * 1024,	.size = 60 * 1024 * 1024,	},
 };
 
 #elif defined(CONFIG_DREAMBOX_DM7020HD) || defined(CONFIG_DREAMBOX_DM800SE_V2) || defined(CONFIG_DREAMBOX_DM500HD_V2)
@@ -736,9 +736,9 @@ int legacy_flash_map = 0;
 static struct mtd_partition fixed_partition_map_legacy[] = {
 	{ .name = "complete",		.offset = 0,			.size = 1024 * 1024 * 1024,	},
 	{ .name = "loader",		.offset = 0,			.size = 1024 * 1024,		},
-	{ .name = "boot partition",	.offset = 1024 * 1024,		.size = 7 * 1024 * 1024,	},
-	{ .name = "root partition",	.offset = 8 * 1024 * 1024,	.size = 248 * 1024 * 1024,	},
-	{ .name = "misc partition",	.offset = 256 * 1024 * 1024,	.size = 768 * 1024 * 1024,	},
+	{ .name = "boot",		.offset = 1024 * 1024,		.size = 7 * 1024 * 1024,	},
+	{ .name = "root",		.offset = 8 * 1024 * 1024,	.size = 248 * 1024 * 1024,	},
+	{ .name = "misc",		.offset = 256 * 1024 * 1024,	.size = 768 * 1024 * 1024,	},
 };
 
 static struct mtd_partition fixed_partition_map[] = {
diff --git a/drivers/mtd/nand/dreambox_nand.c b/drivers/mtd/nand/dreambox_nand.c
index 08f694b..3585806 100644
--- a/drivers/mtd/nand/dreambox_nand.c
+++ b/drivers/mtd/nand/dreambox_nand.c
@@ -68,11 +68,11 @@ static const struct mtd_partition partition_info[] = {
 		.offset	= 0,
 		.size	= 1024*1024
 	}, {
-		.name	= "boot partition",
+		.name	= "boot",
 		.offset	= 1024*1024,
 		.size	= 7*1024*1024
 	}, {
-		.name	= "root partition",
+		.name	= "root",
 		.offset	= 8*1024*1024,
 		.size	= 248*1024*1024
 	},
