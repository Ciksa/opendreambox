@@ -61,10 +61,8 @@ class ServiceInfo(Converter, object):
 	def getBoolean(self):
 		service = self.source.service
 		if self.type == self.HAS_SUBTITLES:
-			subtitle = service and service.subtitle()
-			if subtitle and subtitle.getSubtitleList():
-				return True
