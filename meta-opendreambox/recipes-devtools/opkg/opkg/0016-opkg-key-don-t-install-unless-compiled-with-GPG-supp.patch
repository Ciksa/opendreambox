From 0a03c625bf20468eb1bd2a06253c28b834848d0a Mon Sep 17 00:00:00 2001
From: Andreas Oberritter <obi@opendreambox.org>
Date: Wed, 10 Jul 2013 16:32:50 +0200
Subject: [PATCH 16/16] opkg-key: don't install unless compiled with GPG
 support

Signed-off-by: Andreas Oberritter <obi@opendreambox.org>
---
 configure.ac      | 1 +
 man/Makefile.am   | 7 +++++--
 utils/Makefile.am | 6 +++++-
 3 files changed, 11 insertions(+), 3 deletions(-)

diff --git a/configure.ac b/configure.ac
index a146681..c9393bd 100644
--- a/configure.ac
+++ b/configure.ac
@@ -169,6 +169,7 @@ if test "x$want_gpgme" = "xyes"; then
     AC_MSG_ERROR(GPGME $min_gpgme_version or later needed)
   fi
 fi
+AM_CONDITIONAL(HAVE_GPGME, test "x$want_gpgme" = "xyes")
 
 AC_SUBST(GPGME_CFLAGS)
 AC_SUBST(GPGME_LIBS)
diff --git a/man/Makefile.am b/man/Makefile.am
index 6d0a535..2fbf769 100644
--- a/man/Makefile.am
+++ b/man/Makefile.am
@@ -1,2 +1,5 @@
-man_MANS=opkg-cl.1 \
-  opkg-key.1
+man_MANS = opkg-cl.1
+
+if HAVE_GPGME
+man_MANS += opkg-key.1
+endif
diff --git a/utils/Makefile.am b/utils/Makefile.am
index acac628..23f97ca 100644
--- a/utils/Makefile.am
+++ b/utils/Makefile.am
@@ -1,3 +1,7 @@
-bin_SCRIPTS = update-alternatives opkg-key
+bin_SCRIPTS = update-alternatives
+
+if HAVE_GPGME
+bin_SCRIPTS += opkg-key
+endif
 
 EXTRA_DIST = $(bin_SCRIPTS)
